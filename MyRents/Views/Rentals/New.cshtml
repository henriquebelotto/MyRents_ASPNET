
@{
    ViewBag.Title = "New Rental Form";
}

<h2>@ViewBag.Title</h2>

<div class="container">

    <form id="newRental">
        <div class="form-group">
            <label for="customer">Customer</label>
            <div class="tt-container">
                <input id="customer" name="customer" type="text" data-rule-validCustomer="true" required value="" class="form-control typeahead" placeholder="Customer's Name" />
            </div>

        </div>

        <div class="form-group">
            <label for="movie">Movie</label>
            <div class="tt-container">
                <input id="movie" name="movie" type="text" value="" data-rule-validMovieList="true" class="form-control typeahead" placeholder="Movie's Name" />
            </div>
        </div>

        <div class="row">
            <div class="col-md-4 col-sm-4">
                <ul id="movies" class="list-group"></ul>
            </div>

        </div>


        <button class="btn btn-primary mt-3">Submit</button>
    </form>

</div>

@section scripts
{

    <!-- Adding client-side validation -->
    @Scripts.Render("~/bundles/jqueryval")

    <!-- Using external Javascript file - TypeAhead script is inside this js file-->
    <script type="text/javascript" src="/Scripts/NewRental/newRentalScripts.js"></script>
}
